# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ghostchat?retryWrites=true&w=majority

# JWT Secret (minimum 32 characters)
# Generate with: require('crypto').randomBytes(64).toString('hex')
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long

# Encryption Key (exactly 32 characters for AES-256)
# Generate with: require('crypto').randomBytes(16).toString('hex')
ENCRYPTION_KEY=your32characterencryptionkeyhere

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (Update with your deployed frontend URL)
# For local development: http://localhost:3000
# For production: https://your-frontend-domain.vercel.app
CLIENT_URL=http://localhost:3000
